<?xml version="1.0" encoding="UTF-8" ?>
<project name="elses" default="build" basedir=".">
    <description>
        simple example build file
    </description>
    <!-- set global properties for this build -->

    <target name="init">
        <property file="project.properties"/>
    </target>

    <target name="clean" depends="init">
        <delete dir="${dist.dir}"/>
        <mkdir dir="${dist.dir}"/>
        <mkdir dir="${lib.dir}"/>
        <mkdir dir="${libext.dir}"/>
    </target>

    <target name="build" depends="clean">

        <javac srcdir="${src.dir}" destdir="${dist.dir}" debug="on">

            <classpath>
               <fileset dir="${lib.dir}">
                   <include name="**/*.jar"/>
               </fileset>
            </classpath>
        </javac>
    </target>


    <target name="test" depends="build">

        <javac srcdir="${testsrc.dir}" destdir="${dist.dir}" debug="on">

            <classpath>
                <fileset dir="${lib.dir}">
                    <include name="**/*.jar"/>
                </fileset>
                <fileset dir="${libext.dir}">
                    <include name="**/*.jar"/>
                </fileset>
                <fileset dir="${dist.dir}">
                    <include name="**/*"/>
                </fileset>

            </classpath>
        </javac>

        <junit printsummary="yes" haltonfailure="yes">
            <classpath>
                <fileset dir="${lib.dir}">
                    <include name="**/*.jar"/>
                </fileset>
                <fileset dir="${libext.dir}">
                    <include name="**/*.jar"/>
                </fileset>
                <path path="${dist.dir}"/>

            </classpath>

            <formatter type="plain" usefile="false"/>

            <batchtest>
                <fileset dir="${testsrc.dir}" >
                    <include name="**/*.java"/>
                </fileset>
            </batchtest>
        </junit>

    </target>
    <target name="jar" depends="build">
        <jar file="${dist.dir}/elses.jar">
            <fileset dir="${lib.dir}">
                <include name="**/*.jar"/>
            </fileset>
            <fileset dir="${dist.dir}">
                <include name="**/*.class"/>
                <include name="**/*.sh"/>
            </fileset>
        </jar>
    </target>

    <target name="dist" depends="build">
        <zip file="elses.zip">
            <fileset dir="${lib.dir}">
                <include name="**/*.jar"/>
            </fileset>
            <fileset dir="${dist.dir}">
                <include name="**/*.class"/>
                <include name="**/*.sh"/>
            </fileset>
        </zip>
    </target>

    <target name="native-image" depends="jar">
       <mkdir dir="${dist.dir}/${os.arch}"/>
        <exec command="native-image -cp ${dist.dir}/elses.jar org.hccp.elses.Elses  ${dist.dir}/${os.arch}/elses"/>
    </target>
    </project>
